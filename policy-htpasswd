apiVersion: policy.open-cluster-management.io/v1
kind: Policy
metadata:
  name: oauth-htpasswd
  namespace: open-cluster-management
  annotations:
    policy.open-cluster-management.io/categories: CM Configuration Management, AC Access Control
    policy.open-cluster-management.io/controls: AC-3 Access Enforcement
    policy.open-cluster-management.io/standards: NIST SP 800-53
spec:
  disabled: false
  policy-templates:
    # Create a secret that stores information about htpasswd users
    # htpasswd: <base64_encoded_htpasswd_file_contents>
    - objectDefinition:
        apiVersion: policy.open-cluster-management.io/v1
        kind: ConfigurationPolicy
        metadata:
          name: oauth-htpasswd-secret
        spec:
          object-templates:
            - complianceType: mustonlyhave
              objectDefinition:
                apiVersion: v1
                data:
                  htpasswd: YWRtaW46JDJ5JDA1JDg3Qk5nWEVKVEhmMk9ZUC9UQ1hSZ3VLQnN1clFRWXZiWmxQMVl6MWl2WXdjYlBBVVYvTXJXCg==
                kind: Secret
                metadata:
                  name: htpass-secret
                  namespace: openshift-config
                type: Opaque
          pruneObjectBehavior: DeleteIfCreated
          remediationAction: inform
          severity: high
    # Configure the OAuth for using htpasswd as the identity provider
    - objectDefinition:
        apiVersion: policy.open-cluster-management.io/v1
        kind: ConfigurationPolicy
        metadata:
          name: oauth-htpasswd
        spec:
          object-templates:
            - complianceType: musthave
              objectDefinition:
                apiVersion: config.openshift.io/v1
                kind: OAuth
                metadata:
                  name: cluster
                spec:
                  identityProviders:
                    - name: htpasswd_provider
                      htpasswd:
                        fileData:
                          name: htpass-secret
                      mappingMethod: claim
                      type: HTPasswd
          pruneObjectBehavior: DeleteIfCreated
          remediationAction: inform
          severity: high
  remediationAction: inform
---
apiVersion: cluster.open-cluster-management.io/v1beta1
kind: Placement
metadata:
  name: dev-clusters-placement
  namespace: open-cluster-management
spec:
  clusterSets:
    - dev-clusters
---
apiVersion: policy.open-cluster-management.io/v1
kind: PlacementBinding
metadata:
  name: oauth-htpasswd-policy
  namespace: open-cluster-management
placementRef:
  name: dev-clusters-placement
  apiGroup: cluster.open-cluster-management.io
  kind: Placement
subjects:
  - name: oauth-htpasswd
    apiGroup: policy.open-cluster-management.io
    kind: Policy

